<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_eight"
    android:layout_marginEnd="@dimen/dimen_eight"
    android:layout_marginStart="@dimen/dimen_eight"
    android:layout_marginTop="@dimen/dimen_eight"
    android:background="@color/color_white"
    android:elevation="@dimen/elevation_dimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_eight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_series_name"
                style="@style/text_style_left" />

            <TextView
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/series_name_venu"
                style="@style/text_style_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_venu"
                style="@style/text_style_left" />

            <TextView
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/venu_name"
                style="@style/text_style_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                style="@style/text_style_left" />

            <TextView
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/match_date"
                style="@style/text_style_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_umpire"
                style="@style/text_style_left" />

            <TextView
                android:id="@+id/umpire_colon"
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/umpire_name"
                style="@style/text_style_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_3rd_umpire"
                style="@style/text_style_left" />

            <TextView
                android:id="@+id/rd3_umpire_colon"
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/rd3_umpire_name"
                style="@style/text_style_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_referee"
                style="@style/text_style_left" />

            <TextView
                android:id="@+id/referee_colon"
                style="@style/colon_style"
                android:text="@string/colon_string" />

            <TextView
                android:id="@+id/referee_name"
                style="@style/text_style_right" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_squads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team1_players_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team2_players_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>