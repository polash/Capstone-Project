<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_liveMatches"
    android:layout_width="360dp"
    android:layout_height="130dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="#FFFFFF"
    android:elevation="4dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/series_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="শ্রী লিঙ্ক টুর অফ ইন্ডিয়া, 2017" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matches_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textSize="10sp"
                tools:text="1st টেস্ট" />

            <TextView
                android:id="@+id/match_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textSize="10sp"
                tools:text="টেস্ট" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team1_country_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="3"
                android:textSize="12sp"
                tools:text="BAN" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team1_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:textSize="12sp"
                    tools:text="128" />

                <TextView
                    android:id="@+id/back_slash_score_team1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="/"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/team1_wkt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textSize="12sp"
                    tools:text="10" />

                <TextView
                    android:id="@+id/team1_over"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    tools:text="10" />

                <TextView
                    android:id="@+id/over_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.6"
                    android:textSize="12sp"
                    tools:text="ওভার" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/team2_country_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="3"
                android:textSize="12sp"
                tools:text="IND" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team2_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:textSize="12sp"
                    tools:text="128" />

                <TextView
                    android:id="@+id/back_slash_score_team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="/"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/team2_wkt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textSize="12sp"
                    tools:text="10" />

                <TextView
                    android:id="@+id/team2_over"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    tools:text="10" />

                <TextView
                    android:id="@+id/over_text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.6"
                    android:textSize="12sp"
                    tools:text="ওভার" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/matchstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="নির্ধারিত শুরুর সময় : নভেম্বর 19, 09:05 ভারতীয় সময়" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>